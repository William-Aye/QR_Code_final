<Page x:Class="QR_Code_final.Affichage.ParamAffichage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QR_Code_final.Affichage"
      mc:Ignorable="d" 
      d:DesignHeight="{x:Static SystemParameters.PrimaryScreenHeight}"
      d:DesignWidth="672"
      Title="ParamAffichage">

    <Canvas Margin="100,100,100,100">
        <TextBox Name="MessagePlayer" MaxLength="136" FontSize="40"
                 Width="472" Height="400"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 CharacterCasing="Upper" MinLines="1"
                 BorderThickness="5" BorderBrush="Black"/>
        <Button Content="Run" Click="CliqueRun" FontSize="40" Width="100" Height="60" Canvas.Left="200" Canvas.Top="500"/>
    </Canvas>
</Page>
